    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sendgrid/mail": "6.4.0",
    "express": "4.17.1",
    "firebase-admin": "8.0.0",
    "firebase-functions": "3.0.0",
    "google-auth-library": "4.2.5",
    "googleapis": "40.0.1",
    "handlebars": "4.1.2"
  },
  "devDependencies": {
    "@types/express": "4.17.0",
    "@types/handlebars": "4.1.0",
    "tslint": "5.12.0",
    "typescript": "3.2.2"
  },
  "private": true
}
